{% extends "base.twig" %}

{% block title %}PwPay - Dashboard{% endblock %}

{% block content %}
    <div class="header_buttons">
        <div class="logout">
            <form action="/logout" method="POST" accept-charset="utf-8">
                <button class="white_button" type="submit">Log out</button>
            </form>
        </div>
        <div class="title">
            <h1>Dashboard</h1>
        </div>

        <div class="buttons">
            <form action="/" method="GET" accept-charset="utf-8">
                <button class="white_button" type="submit">Home</button>
            </form>
        </div>
    </div>


    <br>
    <form action="/profile" method="GET" accept-charset="utf-8">
        <input type="image" src="{{ photo }}" alt="Profile picture">
    </form>

    <form action="/account/summary" method="GET" accept-charset="utf-8">
        <h3>Current balance</h3>

        <input class="currentBalance" id="cBalance" value="{{ wallet }} â‚¬" alt="Current balance" disabled>

        <h3>Latest transactions</h3>
        <ul style="list-style-type:none;">
            <li value={{ trans1 }} id={{ sign1 }}></li>
            <li value={{ trans2 }} id={{ sign2 }}></li>
            <li value={{ trans3 }} id={{ sign3 }}></li>
            <li value={{ trans4 }} id={{ sign4 }}></li>
            <li value={{ trans5 }} id={{ sign5 }}></li>
        </ul>
    </form>

    <form action="/account/bank-account" method="GET" accept-charset="utf-8">
        <button type="submit">Bank account</button>
    </form>

    {% if bank_account is not empty %}
    <form action="/account/money/send" method="GET" accept-charset="utf-8">
        <button type="submit">Send money</button>
    </form>
    <form action="/account/money/request" method="GET" accept-charset="utf-8">
        <button type="submit">Request money</button>
    </form>
    {% endif %}
    {% if bank_account is empty %}
        <p>To do some transactions get one bank account</p>
        <form action="/account/money/send" method="GET" accept-charset="utf-8">
            <button type="submit" disabled>Send money</button>
        </form>
        <form action="/account/money/request" method="GET" accept-charset="utf-8">
            <button type="submit" disabled>Request money</button>
        </form>
    {% endif %}
{% endblock %}