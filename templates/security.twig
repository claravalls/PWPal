{% extends "base.twig" %}


{% block title %}Change Password{% endblock %}

{% block type %}up{% endblock %}

{% block content %}

    <h1>Change Password</h1>
    <form action="/profile/security" method="POST" accept-charset="utf-8">
        <input type="password" name="passwordold" value="" placeholder="Enter old password" required>
        <br><br>
        <input type="password" name="passwordnew" value="" placeholder="Enter new password" required>
        <br><br>
        <input type="password" name="checkpass" value="" placeholder="Confirm password" required>
        <br><br>
        <button type="submit">Change Password</button>
        <br>
    {% if errors is not empty %}
        <ol>
            {% for error in errors %}
                <p>{{ error }}</p>
            {% endfor %}
        </ol>
    {% endif %}
    </form>
    <form action="/profile" method="GET" accept-charset="utf-8">
        <button type="submit">Back to Profile</button>
    </form>
{% endblock %}

