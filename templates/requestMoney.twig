{% extends "base.twig" %}

{% block title %}PwPay - Request Money{% endblock %}

{% block content %}

    <div class="header_buttons">
        <div class="title">
            <h1>Request money</h1>
        </div>

        <div class="buttons">
            <form action="/" method="GET" accept-charset="utf-8">
                <button class="white_button" type="submit">Home</button>
            </form>
        </div>
    </div>

    <form action="/account/money/requests" method="POST" accept-charset="utf-8">
        {% if url is not empty %}
            <meta http-equiv="refresh" content="2;url={{ url }}">
        {% endif %}
        <table>
            <tr>
                <td><label for="email">Request money to</label></td>
                <td><input type="email" id="email" name="email" value="{{ email }}" placeholder="Enter the email"></td>
            </tr>
            <tr>
                <td><label for="amount">Amount </label></td>
                <td><input type="number" step=".01" id="number" name="amount" placeholder="â‚¬" value="{{ amount }}" ></td>
            </tr>
        </table>
        {% if errors is not empty %}
            <ol>
                {% for error in errors %}
                    <p class="error">{{ error }}</p>
                {% endfor %}
            </ol>
        {% endif %}
        <br>
        <button type="submit">Request</button>
    </form>
{% endblock %}