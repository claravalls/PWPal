{% extends "base.twig" %}

{% block title %}PwPay - Home{% endblock %}

{% block header %}Home page{% endblock %}

{% block content %}
    <div class="header_buttons">
        <div class="logout">
            <form action="/logout" method="POST" accept-charset="utf-8">
                <button class="white_button" type="submit">Log out</button>
            </form>
        </div>

        <div class="title">
            <h1>Welcome to PwPay!</h1>
        </div>

        <div class="buttons">
            {% if user is empty %}
                    <form action="/sign-in" method="GET" accept-charset="utf-8">
                        <button class="white_button" type="submit">Sign In</button>
                    </form>
                    <form action="/sign-up" method="GET" accept-charset="utf-8">
                        <button class="white_button" type="submit">Sign Up</button>
                    </form>
            {% else %}
                <p>{{ email }}</p>
                <form action="/profile" method="GET" accept-charset="utf-8">
                    <input type="image" class="profile-pic" src="{{ photo }}" alt="Profile picture">
                </form>
            {% endif %}
        </div>
    </div>
    <br>
    <form action="/account/summary" method="GET" accept-charset="utf-8">
        <button type="submit">DashBoard</button>
    </form>
    <form action="/account/bank-account" method="GET" accept-charset="utf-8">
        <button type="submit">Bank account</button>
    </form>
    <form action="/account/transactions" method="GET" accept-charset="utf-8">
        <button type="submit">All transactions</button>
    </form>
    <form action="/account/money/requests/pending" method="GET" accept-charset="utf-8">
        <button type="submit">Pending requests</button>
    </form>

{% endblock %}

{% block footer %}PW II - La Salle URL{% endblock %}