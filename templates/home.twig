{% extends "base.twig" %}

{% block title %}Home page{% endblock %}

{% block header %}Home page{% endblock %}

{% block content %}
    <div class="header_buttons">
        <div class="title">
            <h1>Welcome to PwPay!</h1>
        </div>

        <div class="buttons">
            {% if user is empty %}
                    <form action="/sign-in" method="GET" accept-charset="utf-8">
                        <button class="white_button" type="submit">Sign In</button>
                    </form>
                    <form action="/sign-up" method="GET" accept-charset="utf-8">
                        <button class="white_button" type="submit">Sign Up</button>
                    </form>
            {% else %}
                <p>{{ email }}</p>
                <form action="/profile" method="GET" accept-charset="utf-8">
                    <input type="image" class="profile-pic" src="{{ photo }}" alt="Profile picture">
                </form>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block footer %}PW II - La Salle URL{% endblock %}